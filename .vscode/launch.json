  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest App",
      "type": "node",
      "request": "attach",
      "port": 4234
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "-i",
        "--no-cache",
        "--watchAll",
        "--codeCoverage=false",
        "--config=${workspaceFolder}/apps/api/jest.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
